<h1 class="text-center"><%= t('.label_index') %></h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t('activerecord.attributes.item.label_ids') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td><%= label.name %></td>
          <td><%= link_to t('show'), label, class: "show-label" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="text-center">
    <%= link_to t('.new_label'), new_label_path, id: "new_label", class: "btn btn-link" %>
  </div>