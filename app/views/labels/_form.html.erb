<%= form_with(model: label) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2>        <%= I18n.t('errors.template.header', 
                   count: label.errors.count,
                   model: label.class.model_name.human) %></h2>

      <ul>
        <% label.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('activerecord.attributes.item.label_ids') %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>


  <% if controller.action_name == "new"|| controller.action_name == "create" then %>
    <% id = "create-label" %>
    <% label_key = t('activerecord.attributes.item.create_label') %>
  <% else %>
    <% id = "update-label" %>
    <% label_key = t('activerecord.attributes.item.update_label') %>
  <% end %>

  <div class="actions text-center">
    <%= form.submit label_key, id: id, class: "btn btn-primary" %>
  </div>
<% end %>