<p id="notice"><%= notice %></p>

<h1>持っているグッズ</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Character</th>
      <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td> <%= image_tag item.image.url if item.image.present? %></td>
        <td><%= item.name %></td>
        <td><%= item.character %></td>
        <td><%= item.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

