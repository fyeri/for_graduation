<div class="container">
    <h1 class="text-center"><%= t('.ownted_item') %></h1>

    <%= form_with url: owned_items_path, method: :get do |form| %>

    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :name, Item.human_attribute_name(:name) %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :character, Item.human_attribute_name(:character) %>
          <%= form.text_field :character, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= form.label :label, Item.human_attribute_name(:label_ids) %>
          <%= form.select :label, current_user.labels.collect { |label| [label.name, label.id] }, {include_blank: true}, {class: "form-control"} %>
        </div>
      </div>
    </div>

    <div class="row justify-content-end">
      <div class="col-md-6 text-right">
        <%= form.submit t('search'), class: "btn btn-primary"  %>
      </div>
    </div>
  <% end %>

<div class="table-responsivr">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= Item.human_attribute_name(:image) %></th>
        <th scope="col"><%= Item.human_attribute_name(:name) %></th>    
        <th scope="col"><%= Item.human_attribute_name(:category) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <% if item.item.image? %>
              <%= image_tag item.item.image.url, class: "img-fluid"  %>
            <% else %>
              <%= image_tag "default.png", size: "200x200", class: "img-fluid"  %>
            <% end %>
          </td>
          <td><%= item.item.name %></td>
          <td><%= item.item.character %></td>
          
          <td><%= link_to t('show'), item.item %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items %>

<h2 class="text-center"><%= t('.category') %></h2>
<div class="text-center">
  <% Item.categories.each do |key, value| %>
    <%= link_to key, items_by_category_path(category: key) %><br>
  <% end %>
</div>
