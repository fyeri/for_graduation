<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :character %>
    <%= form.text_field :character %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.number_field :category %>
  </div>

  <div class="field">
    <%= form.label :purchased_on %>
    <%= form.datetime_field :purchased_on %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <div class="field">
    <%= form.label :item_type, "Item type" %><br>

    <%= label_tag('item_type_owned', 'Owned itm') %>
    <%= radio_button_tag('item_type', 'owned') %> 
   
    <%= label_tag('item_type_wanted', 'Wanted item')%>
    <%= radio_button_tag('item_type', 'wanted') %>
   
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :remark %>
    <%= form.text_area :remark %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


