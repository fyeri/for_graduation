<div class="row justify-content-center">
  <div class="col-md-6 text-center-container">
    <h1><%= t '.edit_items' %></h1>

    <%= render 'form', item: @item %>

    <div class="actions text-center">
      <%= link_to t('show'), @item %>
      <td>
      <br>
        <%= link_to t('destroy'), @item, method: :delete, data: { confirm: t('are_you_sure?') } %>
      </td>
    </div>
  </div>
</div>  